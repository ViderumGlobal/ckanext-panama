{
  "scheming_version": 1,
  "organization_type": "organization",
  "about_url": "http://github.com/open-data/ckanext-scheming",
  "fields": [
    {
      "field_name": "fluent_title",
      "label": "Name",
      "preset": "fluent_text",
      "form_placeholder": "eg. Yellow Submarine",
      "display_snippet": "panama_fluent_text.html",
      "form_snippet": "panama_fluent_text.html",
      "first_form_attrs": {
          "data-module": "slug-preview-target"
      }
    },
    {
      "field_name": "name",
      "label": "URL",
      "validators": "not_empty unicode name_validator group_name_validator",
      "form_snippet": "slug.html",
      "form_placeholder": "my-organization"
    },
    {
      "field_name": "fluent_description",
      "label": "Description",
      "preset": "fluent_markdown",
      "form_placeholder": "A little information about my group..."
    },
    {
      "field_name": "url",
      "label": "Image URL",
      "preset": "resource_url_upload",
      "form_placeholder": "http://example.com/my-image.jpg"
    }
  ]
}
